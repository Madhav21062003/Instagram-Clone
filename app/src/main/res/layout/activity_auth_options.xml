<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECDAF1"
    tools:context=".auth.AuthOptionsActivity">


    <TextView
        android:id="@+id/welcomeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textSize="30sp"
        android:textColor="#D81B60"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/appLogoIv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/applogo"
        android:scaleType="centerCrop"
        android:layout_below="@+id/welcomeTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <Button
        android:id="@+id/btnGoogleSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appLogoIv"
        android:backgroundTint="#D81B60"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:icon="@drawable/google"
        android:text="Continue With Google"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cornerRadius = "8dp"/>

    <Button
        android:id="@+id/btnPhoneLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGoogleSignIn"
        android:backgroundTint="#D81B60"
        app:icon="@drawable/ic_phone"
        android:text="Continue With Phone"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cornerRadius = "8dp"/>

    <Button
        android:id="@+id/btnLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:backgroundTint="#D81B60"
        android:textColor="@color/white"
        app:icon="@drawable/baseline_email_24"
        android:layout_below="@+id/btnPhoneLogin"
        android:text="Continue With Email"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cornerRadius = "8dp"/>

</RelativeLayout>